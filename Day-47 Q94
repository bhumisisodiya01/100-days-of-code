Q94: Find the longest word in a sentence.

/*
Sample Test Cases:
Input 1:
I love programming
Output 1:
programming

*/
#include <stdio.h>

int main() {
    char str[200], word[50], longest[50];
    int i = 0, j = 0, max = 0, len, k;
    longest[0] = '\0';
    gets(str);
    while (str[i] != '\0') {
        if (str[i] != ' ') {
            word[j++] = str[i];
        } else {
            word[j] = '\0';
            len = 0;
            while(word[len] != '\0') len++;
            if(len > max) {
                max = len;
                for(k = 0; k <= len; k++)
                    longest[k] = word[k];
            }
            j = 0;
        }
        i++;
    }
    word[j] = '\0';
    len = 0;
    while(word[len] != '\0') len++;
    if(len > max) {
        max = len;
        for(k = 0; k <= len; k++)
            longest[k] = word[k];
    }
    printf("%s", longest);
    return 0;
}
